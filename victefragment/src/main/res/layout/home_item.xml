<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/index_home_linear"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/index_home_button"
            android:layout_width="@dimen/base_image_width_dimen"
            android:layout_height="@dimen/base_image_width_dimen"
            />

        <TextView
            android:id="@+id/index_home_text"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/base_text_height_dimen"
            android:gravity="center"
            android:text="首页"
            android:textSize="12dip" />
    </LinearLayout>

